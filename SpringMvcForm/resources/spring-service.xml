<?xml version = "1.0" encoding = "UTF-8"?>

<beans 
	xmlns = "http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc = "http://www.springframework.org/schema/mvc"
    xmlns:p = "http://www.springframework.org/schema/p"
	xsi:schemaLocation = "http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.3.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven />

    <bean id = "superCar" class = "intra.bca.co.id.service.impl.SuperCar">
        <constructor-arg type = "java.lang.String">
            <value>Mercedes-Benz</value>
        </constructor-arg>
        <constructor-arg type = "java.lang.String">
            <value>S-Class S550</value>
        </constructor-arg>
        <constructor-arg type = "java.lang.String">
            <value>4.7L V8 Twin Turbocharger</value>
        </constructor-arg>
        <constructor-arg type = "intra.bca.co.id.service.impl.SuperCar$Transmission">
            <value>AUTOMATIC</value>
        </constructor-arg>
        <constructor-arg type = "intra.bca.co.id.service.impl.SuperCar$Fuel">
            <value>GASOLINE</value>
        </constructor-arg>
        <constructor-arg type = "boolean">
            <value>true</value>
        </constructor-arg>
        <property name="motion" value = "My human spirit is moving to the future..." />
    </bean>
</beans>